<%= form_with(model: entry) do |form| %>
  <% if entry.errors.any? %>
    <div class="message is-danger">
      <div class="message-header">
        <p><%= pluralize(entry.errors.count, "error") %> prohibited this entry from being saved:</p>
      </div>

      <div class="message-body">
        <ul>
          <% entry.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>      
      </div>
    </div>
  <% end %>

  <div class="fields">
    <%= form.label :meal_type, style: "display: block", class:"label" %>
    <%= form.text_field :meal_type, class:"input" %>
  </div>

  <div class="fields">
    <%= form.label :calories, style: "display: block", class:"label" %>
    <%= form.number_field :calories, class:"input" %>
  </div>

  <div class="fields">
    <%= form.label :proteins, style: "display: block", class:"label" %>
    <%= form.number_field :proteins, class:"input" %>
  </div>

  <div class="fields">
    <%= form.label :carbs, style: "display: block", class:"label" %>
    <%= form.number_field :carbs, class:"input" %>
  </div>

  <div class="fields">
    <%= form.label :fats, style: "display: block", class:"label" %>
    <%= form.number_field :fats, class:"input" %>
  </div>

  <div >
    <%= form.submit class:"button is-success mt-3 is-fullwidth" %>
    <% unless current_page?("/entries/new") %>
      <%= link_to "Go To Entry", entry, class:"button mt-3 is-fullwidth" %>
    <% end%>
  </div>
<% end %>
