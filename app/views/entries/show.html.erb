<div class="container mt-6 is-centered">
  <% content_for :title do %>
    <%= @entry.meal_type %> &ndash; <%= DateTime.now.strftime("%B %e, %Y")%>
  <% end %>
  <%= render @entry %>
  <div class="card-footer column is-centered"> 
    <%= link_to "Home", entries_path, class:"button is-fullwidth mt-3"  %>
    <%= link_to "Edit", edit_entry_path(@entry), class:"button is-fullwidth mt-3"  %> 
    <%= button_to "Delete", @entry, method: :delete, class:"button is-danger is-fullwidth mt-3"  %>
  </div>  
</div>