<div class="column is-centered mt-6">
  <div class="column is-half" style="margin:0 auto;">
    
    <% @entries.each do |day, entries| %>
      <h3 class="is-size-4 has-text-weight-bold mb-4 has-text-centered">
        <%= day %>
      </h3>

      <nav class="level is-mobile">
        <div class="level-item has-text-centered">
          <div>
            <p class="heading">Calories</p>
            <p class="title"> <%= entries.pluck(:calories).sum %> </p>
          </div>
        </div>
        <div class="level-item has-text-centered">
          <div>
            <p class="heading">Protein</p>
            <p class="title"> <%= entries.pluck(:proteins).sum %>g</p>
          </div>
        </div>
        <div class="level-item has-text-centered">
          <div>
            <p class="heading">Carbs</p>
            <p class="title"> <%= entries.pluck(:carbs).sum %>g</p>
          </div>
        </div>
        <div class="level-item has-text-centered">
          <div>
            <p class="heading">Fats</p>
            <p class="title"> <%= entries.pluck(:fats).sum %>g</p>
          </div>
        </div>
      </nav>


      <% entries.each do |entry| %>
        <%= link_to entry_path(entry) do %>
          <div class="card">
            <div class="card-content">
              <strong><%= entry.meal_type %></strong><br />
              <%= entry.calories %>g calories,
              <%= entry.proteins %>g protein,
              <%= entry.carbs %>g carbs,
              <%= entry.fats %>g fats
            </div>
          </div>
        <% end %>
      <% end %>

    <% end %>
  </div>
</div>